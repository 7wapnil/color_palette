<h1>Login</h1>

<%= form_for(@user, {url: ''}) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Login" %>
  </p>
<% end %>

<p>New user? <%= link_to 'Sign up', signup_path %></p>