<h1><%= @palette.name.capitalize %></h1>

<div class="row">
  <div class="col-xs-6 col-md-4">
    <div class="thumbnail">
      <% @palette.colors.each do |color| %>
        <div style="background-color: <%= color.hex_code %>; height: 50px;"></div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-6 col-md-4">
    <div class="caption">
      <strong>Colors</strong>
      <% @palette.colors.each do |color| %>
        <li><%= link_to color.name.capitalize, color_path(color) %></li>
      <% end %><br>
      <%= render 'palette_actions', palette: @palette %>
    </div>
  </div>
</div>